extends ./template/layout.jade

block content
	#statusPanel
		#nameWrap
			span.fa.fa-file-text
			span#name ...
		
		#peerWrap
			span.fa.fa-child
			span#peer ...

		#blockheightWrap
			span.fa.fa-sort-amount-desc
			span#blockheight69 0
	
	h1 Chaincode Investigator
	br
	p.hint(style="font-size:13px;") This is a tool to help debug/examine running chaincode.
	p.hint(style="font-size:13px;")	First load the chaincode summary you want, next selet a peer to hit, finally invoke your chaincode functions!

		
		
	// ---------------- Loading Panel ----------------- //
	.tool.toolClosed(show="loadPanel")
		span.fa.fa-wrench
		.toollegend.toollegendClosed Load
		.stepNumberClosed 1.
		
	#loadPanel.subPanel
		span#chaincodes
			.ccSummary ...
		button(type="button").loadButton#loadText Summary <br/> Text
		button(type="button").loadButton#loadFile Summary <br/> File
		button(type="button").loadButton#loadManual Manually
		
		#chaincodeDetailsWrap(hidden)
			br
			br
			span Load Chaincode Summary:&nbsp;
			span.hint (you can also click prev chaincode above to edit its details here)
			button(type="button" style="margin-bottom:5px;")#loadjson Load Text
			br
			br
			textarea#jsonarea {}
				
				
		#newccWrap(hidden)
			span.legend New:
			p
				input(type="text" placeholder="Git Clone URL" name="git_url").newInput
			p
				input(type="text" placeholder="Git Zip URL" name="zip_url").newInput
			p
				input(type="text" placeholder="Unzipped Directory/Path" name="unzip_dir").newInput
			center
				button(type="button" style="float:none")#parsecc SDK Parse CC 
				span &nbsp;&nbsp;
	
	
	// ---------------- Network Panel ----------------- //	
	.tool.toolClosed.accent(show='networkPanel')
		span.fa.fa-gears
		.toollegend.toollegendClosed Network
		.stepNumberClosed 2.
		
	#networkPanel.subPanel.ready
		p
			span.legend Peer:
			select(style="margin-left:0;")#peers
		
		p
			span.legend User:
			select(style="margin-left:0;")#users
	
	
	// ---------------- Chaincode Panel ----------------- //
	.tool.toolClosed(show='chaincodePanel')
		span.fa.fa-terminal
		.toollegend.toollegendClosed Chaincode
		.stepNumberClosed 3.

	#chaincodePanel.subPanel.ready
		
		form#ccWrap
			.func 
				span Read (
				input(type="text" name="read_name" placeholder="var name")
				span ); 
				button(type="button")#read 
					span Run
					span.fa.fa-fire
				button(type="button" style="margin-right:10px;")#readall
					span Run All
					span.fa.fa-th
			
			.func 
				span Write (
				input(type="text" name="write_name" placeholder="var name")
				input(type="text" name="write_val" placeholder="value")
				span ); 
				button(type="button")#write
					span Run
					span.fa.fa-fire
				
			.func 
				span Remove (
				input(type="text" name="remove_name" placeholder="var name")
				span ); 
				button(type="button")#remove
					span Run
					span.fa.fa-fire
			
			.func 
				span Init ([
				input(type="text" name="init_args" placeholder="array of strings" value='"72"' style="width:100px;")
				span ]); 
				span#giturl(style="font-size:11px; margin-left:10px;") none
				button(type="button")#init
					span Run
					span.fa.fa-fire
				button(type="button" style="margin-right:10px;")#deploy
					span Deploy
					span.fa.fa-chevron-right
					
			br
			
			#customgowrap
			
			br
			
			.func 
				input(type="text" name="func_name" placeholder="func name")
				span (
				input(type="text" name="func_val" placeholder="argument")
				span ); 
				button(type="button")#barebones
					span Run
					span.fa.fa-fire
					
					
	// ---------------- Log Panel ----------------- //
	.tool.toolClosed.accent(show='logPanel')
		span.fa.fa-file-text
		.toollegend.toollegendClosed Logs
		.stepNumberClosed 4.
		
	#logPanel.subPanel.ready
		textarea(disabled="disabled")#logs logs here
